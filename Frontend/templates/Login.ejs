<div class="login-wrap">
    <button class="open-close-menu-button btn btn-md btn-default">
        <i class="glyphicon glyphicon-th-list"></i>
    </button>
    <div class="photo-div">
        <img class="login-photo" src="../www/assets/images/linden.png">
    </div>
    <form class="form-horizontal">
        <div class="form-group mail-group">
            <label class="col-sm-4 control-label">e-mail</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" id="inputMail" placeholder="linden@gmail.com">
            </div>
            <span class="mail-help-block" style="display:none">Wrong e-mail</span>
        </div>
        <div class="form-group password-group">
            <label class="col-sm-4 control-label">Password</label>
            <div class="col-sm-8">
                <input class="form-control" type="text" id="inputPassword" placeholder="password">
            </div>
            <span class="password-help-block" style="display:none">Wrong password</span>
        </div>
    </form>
    <div class="btn-group sign-buttons" role="group">
        <button type="button" class="btn btn-warning change-state-btn" id="login">
            Sign in
        </button>
        <button type="button" class="btn btn-warning change-state-btn" id="register">
            Sign up
        </button>
    </div>
</div>